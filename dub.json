    "description": "A volfied-like game WIP.",
    "license": "boost",
    "name": "drawee",
    "configurations": [
        {
            "name": "default",
            "targetType": "executable",
            "dflags": ["-betterC"],
            "dependencies": {
                "bindbc-opengl": "*",
                "bindbc-sdl": "~>0.13.0",
                "dvector": "~>0.0.5",
                "bcaa": "*",
                "earcutd": "*",
                "chipmunkd": "1.0.1+7.0.1",
                "bettercmath": "*"
            },
            "excludedSourceFiles": ["gl4.d", "clib.d"],
            "versions": [
                "BindSDL_TTF",
                "BindSDL_Image",
                "GL_41"
            ],
            "subConfigurations": {
                "bindbc-sdl": "staticBC",
                "bindbc-opengl": "dynamicBC"
            },
            "libs": ["SDL2", "SDL2_image", "SDL2_ttf", "chipmunk"]
        },
        {
            "name": "wasm",
            "sourceFiles": [
              "source/**.d"
            ],
            "dependencies": {
                "earcutd": "*",
                "dvector": "~>0.0.5",
                "bcaa": "*",
                "bindbc-sdl": {"path": "packs/bindbc-sdl-0.19.2/bindbc-sdl/"},
                "chipmunkd": {"path": "packs/chipmunkd/"},
                "bettercmath": {"path": "packs/bettercmath/"}
            },
            "dflags-ldc": ["--output-o", "--output-bc", "-c",
                "-betterC"
            ],
            "lflags": ["-allow-undefined"],
            "versions": [
                "BindSDL_Static",
                "BindSDL_TTF",
                "BindSDL_Image",
                "GL_41"
            ],
            "subConfigurations": {
                "bindbc-sdl": "staticBC",
                "bettercmath": "betterC"
            },
            "uUcommentMe-postBuildCommands": ["emcc -v -O0 -s WASM=1 -s USE_SDL=2 -s USE_SDL_IMAGE=2 -s SDL2_IMAGE_FORMATS=[\"png\"] -s USE_SDL_TTF=2 -s ENVIRONMENT=web --embed-file res -o web/index.html libdrawee.a libchipmunk.a"]
        }
    ]
}